<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoxNet.GardenDefender.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Select program:" />
            <Picker x:Name="programPicker" Title="Program type"/>

            <StackLayout x:Name="options" IsVisible="False">
                <Label x:Name="periodLabel" />
                <Entry x:Name="periodEntry" MaxLength="2" Keyboard="Numeric" />
                <Label x:Name="durationLabel" />
                <Entry x:Name="durationEntry" MaxLength="2" Keyboard="Numeric" />
            </StackLayout>

            <Label x:Name="errorLabel" Text="Enter values from given ranges!" TextColor="Red" FontAttributes="Bold" IsVisible="False"/>

            <Button 
                x:Name="startButton"
                Text="Start"
                IsEnabled="False"
                Clicked="Start"
                BackgroundColor="DarkGray"
            />

            <Button 
                x:Name="cancelButton"
                IsEnabled="False"
                Text="Cancel"
                Clicked="Cancel"
                BackgroundColor="DarkGray"
            />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
